{
  "application": {
    "name": "Studyos â€” Personal Study OS",
    "description": "Offline-first student productivity dashboard",
    "framework": "React 19 (via CDN)",
    "styling": "Tailwind CSS (via CDN)"
  },
  "pages_and_views": [
    { "name": "Dashboard", "type": "Main View", "route": "state:view='dashboard'" },
    { "name": "Systems", "type": "Main View", "route": "state:view='systems'" },
    { "name": "Focus Mode", "type": "Overlay", "trigger": "User Action / Button" },
    { "name": "Zen Chamber", "type": "Overlay", "component": "FocusView" }
  ],
  "components": {
    "layout": ["Header", "ParallaxBackground", "CustomWallpaper", "LiveWallpaperControls", "ModernSidebar"],
    "ui_primitives": ["Button", "Input", "Card", "ProgressBar", "RichTextEditor", "LazyLoadModule", "AdvancedColorPicker"],
    "modals": ["FileViewerModal", "TaskViewerModal", "ScheduleEditorModal", "QuickCreateModal", "CommandPalette", "FocusView"],
    "dashboard_widgets": [
      "ProgressSummary", "ClockCalendar", "PomodoroTimer", "TasksWidget", 
      "ClassesWidget", "StudyProgress", "QuickNote", "MusicPlayer", 
      "HabitStreak", "GamificationWidget", "FocusMode"
    ],
    "system_modules": [
      "AcademicsManager", "ProjectsManager", "FinanceManager", "TaskManager", 
      "BackupRestoreManager", "NotesManager", "FileManager", "FlashcardManager", 
      "HabitsManager", "JobApplicationManager", "VisionAndJournalManager", 
      "PriorityMatrix", "GlobalSearch", "SettingsManager", "ProgressManager", 
      "AnalyticsManager"
    ]
  },
  "storage": {
    "localStorage_keys": [
      "appSettings", "classes", "studyLogs", "semesters", "projects", "txns", 
      "kanban", "tasks", "notes", "decks", "events", "pomodoroLogs", 
      "learningLogs", "musicTracks", "musicPlaylists", "musicPlayerState", 
      "habits", "jobApplications", "visionBoardCards", "journalEntries", 
      "customWheels", "linkResources", "financialTransactions", 
      "transactionCategories", "budgets", "engagementLogs", "activeNoteId"
    ],
    "indexedDB": {
      "name": "StudyosDB",
      "stores": ["files", "backups"]
    }
  },
  "features": {
    "offline_persistence": true,
    "file_handling": ["PDF", "Images", "Audio", "Text"],
    "visualizations": ["Recharts (Pie, Bar, Line, Radar, RadialBar)", "Canvas (Audio Visualizer, Live Wallpaper)"],
    "productivity": ["Kanban", "Pomodoro", "Spaced Repetition (Flashcards)", "Priority Matrix"],
    "customization": ["Themes", "Wallpapers", "Layout Density", "Fonts"],
    "gamification": ["Habit Streaks", "Spin Wheel", "XP/Levels (implied)"]
  },
  "security_risks": [
    { "type": "XSS", "location": "RichTextEditor", "detail": "dangerouslySetInnerHTML used without sanitization library" },
    { "type": "XSS", "location": "FlashcardManager", "detail": "dangerouslySetInnerHTML used for card content" },
    { "type": "XSS", "location": "Journal", "detail": "dangerouslySetInnerHTML used for entries" }
  ],
  "dependencies": {
    "external_cdns": [
      "https://aistudiocdn.com/react@^19.2.0",
      "https://aistudiocdn.com/react-dom@^19.2.0",
      "https://aistudiocdn.com/recharts@^3.4.1",
      "https://cdn.tailwindcss.com",
      "https://fonts.googleapis.com"
    ]
  }
}